<div class="contents">
  <div class="container">
    <h3>部屋情報登録</h3>
    <%= form_with(model: [@property, @room],  local: true) do |form| %>
    <div class="input-form">
      <div class="property-image">
        <%= form.file_field :images, multiple: true, class:"item-image" %>
      </div>
      <div class="room_number form">
        <div class="weight-bold-text">部屋番号</div>
        <%= form.text_field :room_number, placeholder: "部屋番号" %>
      </div>
      <div class="construction_detail form">
        <div class="weight-bold-text">工事内容</div>
        <%= form.text_field :construction_detail, placeholder: "工事内容" %>
      </div>
      <div class="existing-information form">
        <div class="weight-bold-text">既存情報</div>
        <%= form.text_field :existing_information, placeholder: "既存情報" %>
      </div>
      <div class="existing-maker form">
        <div class="weight-bold-text">既存メーカー</div>
        <%= form.text_field :existing_maker, placeholder: "既存メーカー" %>
      </div>
      <div class="construction-time form">
        <div class="weight-bold-text">工事時間</div>
        <%= form.collection_select(:construction_time_id, ConstructionTime.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
      <div class="instruction form">
        <div class="weight-bold-text">工事指示</div>
        <%= form.text_area :instruction, placeholder: "工事指示", rows: "10", size: "53x10" %>
      </div>
      </div>
      <div class="remarks_room form">
        <div class="weight-bold-text">備考</div>
        <%= form.text_area :remarks_room, placeholder: "備考", rows: "10", size: "53x10" %>
      </div>
      <div class="construction-day form">
        <div class="weight-bold-text">工事日</div>
        <%= form.text_field :construction_day, placeholder: "工事日" %>
      </div>
      <%= form.submit "登録する" %>
    </div>
    <% end %>
  </div>
</div>