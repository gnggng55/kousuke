<div class="menu">
  <ul>
    <li><%= link_to "物件検索" , class:"menuLIST" %></li>
    <li><%= link_to "物件登録", new_property_path %></li>
    <li><%= link_to "商品検索" %></li>
    <li><%= link_to "商品登録" %></li>
    <li class="logout"><%= link_to "ログアウト" %></li>
  </ul>
</div>

<div class="search-form">
<p>物件を検索する</p>
<table>
<div class="">
<%= form_with(url: search_properties_path, local: true, method: :get, class: "search-form") do |form| %>
  <tr>
    <div class="property-search form">
      <th><p>物件名で検索</p></th>
      <td><%= form.text_field :keyword, placeholder: "物件名", class: "search-input" %></td>
    </div>
  </tr>
  <tr>
    <div class="address-search form">
      <th><p>住所で検索する</p></th>
      <td><%= form.text_field :keyword, placeholder: "住所", class: "search-input" %></td>
    </div>
  </tr>
  <tr>
    <div class="existing-information-search form">
      <th><p>既存情報で検索する</p></th>
      <td><%= form.text_field :keyword, placeholder: "既存情報", class: "search-input" %></td>
  </div>
  </tr>
  <tr>
    <div class="new-information-search form">
      <th><p>設置機種で検索する</p></th>
      <td><%= form.text_field :keyword, placeholder: "設置機種", class: "search-input" %></td>
    </div>
  </tr>
  <td><%= form.submit "検索", class: "search-btn" %></td>
  </div>
</table>
<% end %>
</div>